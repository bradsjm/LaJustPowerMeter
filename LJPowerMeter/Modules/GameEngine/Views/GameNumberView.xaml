<UserControl x:Class="LaJust.PowerMeter.Modules.GameEngine.Views.GameNumberView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:uc="clr-namespace:LaJust.PowerMeter.Modules.GameEngine.UserControls"
    Background="Black" Foreground="White">
    <StackPanel Orientation="Horizontal">
        <TextBlock FontWeight="Bold" FontSize="18" Text="Game" Margin="8"/> 
        <TextBlock FontWeight="Bold" FontSize="36" Text="{Binding Game.GameNumber, StringFormat=D3}" Margin="3" />
    </StackPanel>
</UserControl>
